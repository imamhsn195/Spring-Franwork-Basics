<?xml version="1.0" encoding="UTF-8" ?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>
    <bean id="Triangle" class="org.example.Triangle" autowire="byName">
        <property name="pointA" ref="pointA"/>
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>
    <bean class="org.example.Point" id="pointA">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    <bean class="org.example.Point" id="pointB">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>
    <bean class="org.example.Point" id="pointC">
        <property name="x" value="0"/>
        <property name="y" value="-20"/>
    </bean>
    <bean id="Circle" class="org.example.Circle">
        <property name="center" ref="pointA"/>
    </bean>
</beans>